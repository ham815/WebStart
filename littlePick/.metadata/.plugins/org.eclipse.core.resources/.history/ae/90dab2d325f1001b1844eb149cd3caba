	<insert id="orderInsert" parameterType="productVO" >
		INSERT INTO Order_tb      
		VALUES (#{order_num}, #{user_num}, CURDATE(), 
		#{total_account}, #{order_state}, #{order_address}, #{delivery_type}) 
	</insert>
	
	<!-- 주문 정보 -->
	<insert id="orderInfo">
	 INSERT INTO Order_tb(orderId, userId, orderRec, userAddr1, userAddr2, userAddr3, orderPhon, amount)
	     VALUES(#{orderId}, #{userId}, #{orderRec}, #{userAddr1}, #{userAddr2}, #{userAddr3}, #{orderPhon}, #{amount})
	</insert>
	   
	<!-- 주문 상세 정보 --> 
	<insert id="orderInfo_Details">
	 insert into tbl_order_details(orderDetailsNum, orderId, gdsNum, cartStock)
	     select tbl_order_details_seq.nextval, #{orderId}, gdsNum, cartStock
	         from tbl_cart   
	</insert> 
	
	</select> -->
	

	








	

