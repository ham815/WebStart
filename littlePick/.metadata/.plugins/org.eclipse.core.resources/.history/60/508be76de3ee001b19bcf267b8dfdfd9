<mapper namespace="productMapper">
	<!-- 상품 목록  -->
	<select id="mainList" resultType="product" parameterType="product" >
		SELECT * 
		FROM Product_tb
		WHERE smallpack=#{smallpack}
		ORDER BY product_num DESC		
	</select>
	
